<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        //第一行（输入显示）

        <EditText
            android:id="@+id/shuru"
            android:background="#00000000"
            android:textStyle="italic|bold"
            android:editable="false"
            android:gravity="right|bottom"
            android:textColor="@drawable/black"
            android:textSize="50sp"  />


        //第二行（结果显示）
        <EditText
            android:id="@+id/shuchu"
            android:layout_weight="150"
            android:background="#00000000"
            android:textStyle="italic|bold"
            android:textColor="@drawable/black"
            android:editable="false"
            android:gravity="right|bottom"
            android:textSize="50sp"
            />
        //第三行button
        <TableRow>
            <Button
                android:id="@+id/sin"
                android:layout_width="170px"
                android:layout_height="200px"
                android:layout_margin="10px"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="10px"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="sin"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/cos"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="cos"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/tan"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:background="#00000000"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:text="tan"
                android:textSize="25sp"
                />

            <Button
                android:id="@+id/C"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="C"
                android:textSize="25sp"
                />



        </TableRow>
        //第四行button
        <TableRow>
            <Button
                android:id="@+id/jiecheng"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:background="#00000000"
                android:text="x!"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/seven"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:background="#00000000"
                android:textStyle="bold"
                android:text="7"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/eight"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:background="#00000000"
                android:textStyle="bold"
                android:text="8"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/nine"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:background="#00000000"
                android:textStyle="bold"
                android:text="9"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/jia"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="+"
                android:textSize="25sp"
                />
        </TableRow>
        //第五行button
        <TableRow>
            <Button
                android:id="@+id/tuiwei"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="CE"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/four"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="4"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/five"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:background="#00000000"
                android:textStyle="bold"
                android:text="5"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/six"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="6"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/jian"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="-"
                android:textSize="25sp"
                />
        </TableRow>
        //第六行button
        <TableRow>
            <Button
                android:id="@+id/pingfang"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:background="#00000000"
                android:textStyle="bold"
                android:text="x²"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/one"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="1"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/two"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="2"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/three"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="3"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/cheng"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="*"
                android:textSize="25sp"
                />
        </TableRow>
        //第七行button
        <TableRow>
            <Button
                android:id="@+id/kaifang"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="√x"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/zero"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:textStyle="bold"
                android:background="#00000000"
                android:text="0"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/point"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:background="#00000000"
                android:textStyle="bold"
                android:text="."
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/dengyv"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:background="#00000000"
                android:textStyle="bold"
                android:text="="
                android:onClick="caonimade"
                android:textSize="25sp"
                />
            <Button
                android:id="@+id/chu"
                android:layout_height="200px"
                android:layout_width="170px"
                android:layout_margin="10px"
                android:layout_marginBottom="10px"
                android:layout_gravity="right|bottom"
                android:textColor="@drawable/black"
                android:background="#00000000"
                android:textStyle="bold"
                android:text="/"
                android:textSize="25sp"
                />
        </TableRow>
    </TableLayout>


</android.support.constraint.ConstraintLayout>
